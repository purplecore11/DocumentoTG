	author = {Nippress, S. E. J. and Rietbrock, A.},
	month = nov,
	year = {2007},
	keywords = {subduction zone, seismogenic zone, continental crust permeability, fluid flow, intermediate-depth earthquake, northern Chile},
	pages = {235--245},
