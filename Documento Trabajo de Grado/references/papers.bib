	year = {2011},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1029/2010JB008166},
	keywords = {interseismic coupling, deformation, GPS and InSAR measurements, Peru-Chile megathrust earthquake, seismic cycle, seismic potential},
